{
    "compilerOptions": {
        "skipLibCheck": true,
        "strict": true,
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "./dist"
    },
    "include": ["src", "jest.setup.ts"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
